<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/selective"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            android:id="@+id/register_image_home"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register !"
            android:id="@+id/register_textview_register"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_28ssp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/register_image_home"
            app:layout_constraintBottom_toBottomOf="@+id/register_image_home"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_24"
            android:id="@+id/register_image_person"
            app:layout_constraintTop_toTopOf="@+id/register_edittext_username"
            app:layout_constraintBottom_toBottomOf="@+id/register_edittext_username"
            app:layout_constraintStart_toStartOf="@+id/register_edittext_username"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:hint="@string/username"
            android:paddingStart="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:id="@+id/register_edittext_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_textview_register"
            tools:ignore="RtlSymmetry" />




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_email_24"
            android:id="@+id/register_image_email"
            app:layout_constraintTop_toTopOf="@+id/register_edittext_email"
            app:layout_constraintBottom_toBottomOf="@+id/register_edittext_email"
            app:layout_constraintStart_toStartOf="@+id/register_edittext_email"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:hint="@string/email"
            android:paddingStart="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:id="@+id/register_edittext_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_edittext_username"/>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock_24"
            android:id="@+id/register_image_password"
            app:layout_constraintTop_toTopOf="@+id/register_edittext_password"
            app:layout_constraintBottom_toBottomOf="@+id/register_edittext_password"
            app:layout_constraintStart_toStartOf="@+id/register_edittext_password"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:hint="@string/password"
            android:paddingStart="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:id="@+id/register_edittext_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_edittext_email"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_phone_24"
            android:id="@+id/register_image_phone"
            app:layout_constraintTop_toTopOf="@+id/register_edittext_phone"
            app:layout_constraintBottom_toBottomOf="@+id/register_edittext_phone"
            app:layout_constraintStart_toStartOf="@+id/register_edittext_phone"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:hint="Phone Number"
            android:paddingStart="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:id="@+id/register_edittext_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_edittext_password"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_Button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:background="@drawable/button_cornar"
            android:text="Register Now "
            android:textSize="@dimen/_18ssp"
            app:backgroundTint="@color/apphomedark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_edittext_phone" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@+id/register_Button_register"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >
    <ImageView
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:src="@drawable/google"
        android:layout_marginEnd="@dimen/_15sdp"
        />

    <ImageView
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:src="@drawable/facebook"
                android:layout_marginStart="@dimen/_15sdp"

    />

</LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Already have an account,"
            android:gravity="center"
            android:paddingStart="@dimen/_30sdp"
            android:id="@+id/register_textview_cosion"
            android:paddingBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/register_textview_cosion"
            android:backgroundTint="#fff"
            android:textColor="#000"
            android:id="@+id/register_Button_signIn"
            android:text="sign in ?"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>