<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignIn">

        <ImageView
            android:id="@+id/login_ImageView_sushi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:scaleType="fitXY"
            android:src="@drawable/__sushi_rolls_with_wooden_chopsticks_on_white_background_svetlana_foote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView

            android:id="@+id/login_textView_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20ssp"
            android:text="Sign In !"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp"
            app:layout_constraintBottom_toBottomOf="@+id/login_ImageView_sushi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_ImageView_sushi"
            app:layout_constraintVertical_bias="0.641" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_24"
            app:layout_constraintTop_toTopOf="@+id/sign_edittext_username"
            app:layout_constraintBottom_toBottomOf="@+id/sign_edittext_username"
            app:layout_constraintStart_toStartOf="@+id/sign_edittext_username"

            />
      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/_10sdp"
          android:hint="Username"
          android:paddingStart="@dimen/_20ssp"

          android:layout_marginTop="@dimen/_40sdp"
          android:layout_marginStart="@dimen/_25sdp"
          android:layout_marginEnd="@dimen/_25sdp"
          android:id="@+id/sign_edittext_username"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/login_textView_signin"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ic_lock_24"

            android:src="@drawable/ic_lock_24"
            app:layout_constraintTop_toTopOf="@+id/sign_edittext_password"
            app:layout_constraintBottom_toBottomOf="@+id/sign_edittext_password"
            app:layout_constraintStart_toStartOf="@+id/sign_edittext_password"

            />
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:hint="Password"
            android:paddingStart="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:id="@+id/sign_edittext_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_edittext_username"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/sign_edittext_password"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Forgot password ?"
    android:id="@+id/for_getpassword"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_30sdp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_Button_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:background="@drawable/button_cornar"
            android:text="@string/sign_in"
            android:textSize="@dimen/_18ssp"
            app:backgroundTint="@color/apphomedark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/for_getpassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Terms and Conditions"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="@dimen/_5sdp"
            />






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>